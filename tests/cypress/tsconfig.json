{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "noEmit": false,
    "sourceMap": false,
    "types": ["cypress", "react", "react-dom"],
    "paths": {
      "@tiptap/*": ["packages/*/dist", "packages/*/src"],
      "@tiptap/pm/*": ["../../pm/*/dist"]
    },
    "typeRoots": ["../../node_modules/@types"]
  },
  "include": ["./*/*.ts", "../../**/*.ts"],
  "exclude": [
    "../../packages/react",
    "../../packages/vue-2",
    "../../packages/vue-3",
    "../../packages/extension-code-block-lowlight"
  ]
}
