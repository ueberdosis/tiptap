{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2019",
    "module": "nodenext",
    "strict": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false,
    "paths": {
      "@tiptap/static-renderer/pm/*": ["packages/static-renderer/src/pm/*"],
      "@tiptap/static-renderer/json/*": ["packages/static-renderer/src/json/*"],
      "@tiptap/*": ["packages/*/src/index.ts", "packages-deprecated/*/src/index.ts"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "files": ["./env.d.ts"],
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["**/node_modules", "**/dist"]
}
