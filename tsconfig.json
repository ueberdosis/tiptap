{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2019",
    "module": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false,
    "paths": {
      "@tiptap/*": ["packages/*/src", "packages/*/dist", "packages-deprecated/*/src", "packages-deprecated/*/dist"],
      "@tiptap/static-renderer/json/html-string": ["packages/static-renderer/src/json/html-string"],
      "@tiptap/static-renderer/json/react": ["packages/static-renderer/src/json/react"],
      "@tiptap/static-renderer/pm/html-string": ["packages/static-renderer/src/pm/html-string"],
      "@tiptap/static-renderer/pm/markdown": ["packages/static-renderer/src/pm/markdown"],
      "@tiptap/static-renderer/pm/react": ["packages/static-renderer/src/pm/react"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "files": ["./env.d.ts"],
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["**/node_modules", "**/dist"]
}
